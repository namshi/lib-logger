{
  "name": "lib-logger",
  "version": "1.0.3",
  "description": "Library that simplifies the way we log JSON output",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test nyc mocha",
    "coverage": "nyc --reporter=lcov --reporter=text-lcov mocha",
    "lint": "eslint --ignore-pattern test --fix .",
    "fmt": "./node_modules/prettier/bin-prettier.js *.js './**/*.js' --write"
  },
  "author": "Namshi",
  "keywords": [
    "json",
    "logger",
    "log",
    "logging"
  ],
  "license": "MIT",
  "dependencies": {
    "winston": "^3.0.0-rc1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "mocha": "^5.2.0",
    "nyc": "^14.1.0",
    "prettier": "^1.17.0"
  },
  "prettier": {
    "printWidth": 300
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --ignore-pattern test --fix .",
      "git add"
    ]
  }
}
